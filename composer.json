{
  "name": "bebehr/clock",
  "description": "A simple PSR-20 implementation for reading date and time from the system clock.",
  "license": "MIT",
  "type": "library",
  "require": {
    "php": "~8.1.0 || ~8.2.0 || ~8.3.0",
    "psr/clock": "^1.0"
  },
  "require-dev": {
    "bamarni/composer-bin-plugin": "^1.8",
    "symfony/var-dumper": "^6.4"
  },
  "provide": {
    "psr/clock-implementation": "1.0.0"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Bebehr\\Clock\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "bamarni/composer-bin-plugin": true
    },
    "platform": {
      "php": "8.1.0"
    },
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "bamarni-bin": {
      "bin-links": false,
      "forward-command": true,
      "target-directory": "vendor-bin"
    }
  },
  "scripts": {
    "fix": [
      "@php-cs-fixer:fix",
      "@phpcbf",
      "@phplint"
    ],
    "lint": [
      "@php-cs-fixer:check",
      "@phpcs"
    ],
    "php-cs-fixer:check": "vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer check -n -v --diff --show-progress=none --ansi",
    "php-cs-fixer:fix": "vendor-bin/php-cs-fixer/vendor/bin/php-cs-fixer fix -n -v --diff --show-progress=none --ansi",
    "phpcbf": [
      "@phplint",
      "vendor-bin/phpcs/vendor/bin/phpcbf"
    ],
    "phpcs": [
      "@phplint",
      "vendor-bin/phpcs/vendor/bin/phpcs"
    ],
    "phplint": "vendor-bin/phplint/vendor/bin/phplint -n --no-progress --ansi"
  }
}
